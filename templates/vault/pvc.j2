kind: PersistentVolumeClaim
apiVersion: v1
metadata:
  name: {{service_param["pvc"]}}
spec:
  accessModes:
    - ReadWriteOnce
  storageClassName: {{universal_param["storage_class"]}}
  resources:
    requests:
      storage: 10Gi

