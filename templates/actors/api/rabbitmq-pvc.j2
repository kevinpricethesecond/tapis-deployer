kind: PersistentVolumeClaim
apiVersion: v1
metadata:
  name: {{service_param["rabbit_pvc"]}}
spec:
  accessModes:
    - ReadWriteOnce
  storageClassName: {{universal_param["storage_class"]}}
  resources:
    requests:
      storage: 20Gi


---
apiVersion: batch/v1
kind: Job
metadata:
  name: chown-actors-rabbitmq-pvc
spec:
  ttlSecondsAfterFinished: 60
  template:
    spec:
      restartPolicy: Never
      containers:
      - name: chown-actors-rabbitmq-volume
        image: alpine:latest
        command:
        - chown
        - -R
        - 999:999
        - /var/lib/rabbitmq
        volumeMounts:
        - name: actors-rabbitmq-data
          mountPath: /var/lib/rabbitmq
      volumes:
      - name: actors-rabbitmq-data
        persistentVolumeClaim:
          claimName: {{service_param["rabbit_pvc"]}}

