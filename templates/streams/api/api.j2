apiVersion: apps/v1
kind: Deployment
metadata:
  name: streams-api
spec:
  selector:
    matchLabels:
      app: streams-api
  template:
    metadata:
      labels:
        app: streams-api
    spec:
      {% if local_param["node_name"]%}
      nodeName: {{local_param["node_name"]}}
      {% endif%}
      containers:
      - name: streams-api
        image: tapis/streams-api:{{local_param["image_version"]|default(service_param["image_version"]|default(universal_param["image_version"]))}}
        imagePullPolicy: Always
        ports:
        - name: http
          containerPort: 5000
        env:
        - name: tapis_base_url
          valueFrom:
            configMapKeyRef:
              name: streams-config
              key: service_site_url
        - name: chords_api_key
          valueFrom:
            secretKeyRef:
              name: tapis-streams-secrets
              key: chords-api-key
        - name: influxdb_password
          valueFrom:
            secretKeyRef:
              name: tapis-streams-secrets
              key: mysql-password
        - name: kapacitor_password
          valueFrom:
            secretKeyRef:
              name: tapis-streams-secrets
              key: mysql-password
        - name: alert_secret
          value: testalert
        - name: mysql_password
          valueFrom:
            secretKeyRef:
              name: tapis-streams-secrets
              key: mysql-password
        - name: service_password
          valueFrom:
            secretKeyRef:
              name: tapis-streams-secrets
              key: service-password
        - name: workerCls
          value: "gthread"
        {% if local_param["process"]%}
        - name: processes
          value: "{{local_param["process"]}}"
        {% endif%}
        {% if local_param["threads"]%}
        - name: threads
          value: "{{local_param["threads"]}}"
        {% endif%}
        volumeMounts:
        - name: streams-config
          mountPath: /home/tapis/config.json
          subPath: streams-config.json
      volumes:
      - name: streams-config
        configMap:
          name: streams-config

