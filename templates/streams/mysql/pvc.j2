kind: PersistentVolumeClaim
apiVersion: v1
metadata:
  name: {{service_param["mysql_pvc"]}}
spec:
  accessModes:
    - ReadWriteOnce
  storageClassName: {{universal_param["storage_class"]}}
  resources:
    requests:
      storage: 20Gi

---
apiVersion: batch/v1
kind: Job
metadata:
  name: chown-streams-mysql-pvc
spec:
  ttlSecondsAfterFinished: 60
  template:
    spec:
      restartPolicy: Never
      containers:
      - name: chown-mysql-volume
        image: alpine:latest
        command:
        - chown
        - -R
        - 999:999
        - /var/lib/mysql
        volumeMounts:
        - name: streams-mysql-data
          mountPath: /var/lib/mysql
      volumes:
      - name: streams-mysql-data
        persistentVolumeClaim:
          claimName: {{service_param["mysql_pvc"]}}

