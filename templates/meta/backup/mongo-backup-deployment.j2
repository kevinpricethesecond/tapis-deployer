apiVersion: apps/v1
kind: Deployment
metadata:
  name: mongo-backup
spec:
  selector:
    matchLabels:
      app: mongo-backup
  template:
    metadata:
      labels:
        app: mongo-backup
    spec:
      containers:
        - name: mongo-backup
          image: tapis/mongobackup:{{local_param["image_version"]|default(service_param["image_version"]|default(universal_param["image_version"]|default("0.1")))}}
          imagePullPolicy: Always
          command: ["/bin/bash"]
          args: ["-c", "/scripts/script.sh && cron && tail -f /var/log/cron.log"]
          env:
            - name: LOG_DIR
              value: /backup/logs
            - name: LOG_FILE
              value: backup.log
            - name: MONGODB_AUTH
              value: admin
            - name: MONGODB_HOST
              value: restheart-mongo
            - name: MONGODB_PORT
              value: "27017"
            - name: MONGO_INITDB_ROOT_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: tapis-meta-secrets
                  key: mongo-password
            - name: MONGO_INITDB_ROOT_USERNAME
              value: restheart
          volumeMounts:
            - name: {{service_param["mongo_backup_pvc"]}}
              mountPath: /backup/
      volumes:
        - name: {{service_param["mongo_backup_pvc"]}}
          persistentVolumeClaim:
            claimName: mongo-backup-claim0
